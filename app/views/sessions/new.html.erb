<% content_for :stylesheets do %>
  <%= stylesheet_link_tag 'sessions/index' %>
  <%= stylesheet_link_tag 'sessions/login' %>
<% end %>

<%= link_to root_path do %>
  <div class="logo_sm"> </div>
<% end %>

<br />

<div class="zamboni">
  <div class="login">
    <form method="post" action="login.html">
      <h2>LOGIN:</h2>
      <input type="text" name="login" value="" placeholder="Username or Email">
      <br />
      <h2>PASSWORD:</h2>
      <input type="password" name="password" value="" placeholder="Password">
      <br /><br />
      <div id="error" class="login_error">
        Sorry, but that doesn't seem right.
      </div>
      <div id="login" class="btn_white" style="margin-right:0px;">
        LOGIN
      </div>
      <br />
      <div class="register">
        <h4>
          Don't have an account? <strike>Register here</strike>.
        </h4>
      </div>
    </form>
  </div>
</div>

<br /><br /><br /><br />

<% content_for :footer do %>
  <%= render partial: 'sessions/new/scripts' %>
<% end%>
